{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "workflows/.*\\.yml",
        "/.*\\.yml",
        ".*\\.yml"
      ],
      "matchStrings": [
        "$.on.workflow_dispatch.inputs.Operator_version.default"
      ],
      "datasourceTemplate": "docker",
      "registryUrlTemplate": "public.ecr.aws",
      "depNameTemplate": "public.ecr.aws/dynatrace/dynatrace-operator",
      "currentValueTemplate": "{{{ default }}}"
    },
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": ["update-images.yaml"],
      "matchStrings": [
        "$.on.workflow_dispatch.inputs.Operator_version.default"
      ],
      "datasourceTemplate": "docker",
      "registryUrlTemplate": "public.ecr.aws",
      "depNameTemplate": "public.ecr.aws/dynatrace/dynatrace-operator"
    }

  ]
}


